package com.test.sku.inheritance;

import java.text.DecimalFormat;

public class Pet {
	
	float age;
	int price;
	String species;
	
	public Pet() {}
	public Pet(float age, int price, String species) {
		super();
		this.age = age;
		this.price = price;
		this.species = species;
	}

	@Override
	public String toString() {
		DecimalFormat nf = new DecimalFormat("#,###");
		DecimalFormat df = new DecimalFormat("#.##");
		return String.format("%s\t%s\t%s", df.format(age), nf.format(price), species);
	}
	
	public float getAge() {
		return age;
	}
	public int getPrice() {
		return price;
	}
	public String getSpecies() {
		return species;
	}
	
	public void setAge(float age) {
		this.age = age;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	public void setSpecies(String species) {
		this.species = species;
	}

	
}
