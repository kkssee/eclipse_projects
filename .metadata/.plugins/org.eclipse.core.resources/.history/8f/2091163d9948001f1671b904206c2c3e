package com.test.sku.network;

import java.io.*;

public class WriteMsg extends Thread {
	ObjectOutputStream oos;
	ChatMsg cm;
	String msg;
	
	WriteMsg(ObjectOutputStream oos, ChatMsg cm, String msg) {
		this.oos = oos;
		this.cm = cm;
		this.msg = msg;
	}
	
	@Override
	public void run() {
		cm.msg = msg;
		try {
			oos.writeObject(cm);
			oos.flush();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
