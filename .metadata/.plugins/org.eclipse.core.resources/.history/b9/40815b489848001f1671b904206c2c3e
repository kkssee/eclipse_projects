package com.test.sku.network;

import java.io.*;
import java.net.*;

public class WriteMsg extends Thread {
	Socket s;
	ChatMsg cm;
	String msg;
	
	try {
		OutputStream out = s.getOutputStream();
		ObjectOutputStream oos = new ObjectOutputStream(out);
	} catch (Exception e) {
		e.printStackTrace();
	}
	
	WriteMsg(Socket s, ChatMsg cm, String msg) {
		this.s = s;
		this.cm = cm;
		this.msg = msg;
	}
	
	@Override
	public void run() {
		while(true) {
			cm.msg = msg;
			try {
				oos.writeObject(cm);
				oos.flush();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
	}

}
