package com.test.sku.network;

import java.io.*;
import java.net.*;

public class WriteMsg extends Thread {
	Socket s;
	ChatMsg cm;
	String msg;
	
	WriteMsg(Socket s, ChatMsg cm, String msg) {
		this.s = s;
		this.cm = cm;
		this.msg = msg;
	}
	
	@Override
	public void run() {
		cm.msg = msg;
		try {
			OutputStream out = s.getOutputStream();
			ObjectOutputStream oos = new ObjectOutputStream(out);
			oos.writeObject(cm);
			oos.flush();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
