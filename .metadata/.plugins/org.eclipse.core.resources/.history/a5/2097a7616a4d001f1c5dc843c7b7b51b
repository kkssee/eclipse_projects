package com.test.sku.pds;

import java.io.Serializable;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.List;

public class PDSVO implements Serializable, Comparable<PDSVO> {
	int no;
	long flen;
	String fname;
	String author;
	String desc;
	Date date;
	byte[] fdata;
	
	List<PDSVO> pList;
	PDSVO pv;
	
	public PDSVO() { }
	public PDSVO(int no) {
		super();
		this.no = no;
	}
	public PDSVO(int nextFno, String fname, String author, long flen, Date date, String desc) {
		super();
		this.no = nextFno;
		this.fname = fname;
		this.author = author;
		this.date = date;
		this.desc = desc;
		this.flen = flen;
	}
	public PDSVO(String fname) {
		super();
		this.fname = fname;
	}
	
	@Override
	public String toString() {
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		String sdate = sdf.format(date);
		String s = String.format("%d\t%-15s\t%s\t%d\t%s\t%s\n%s", no, fname, author, flen, sdate, desc, fdata);	
		return s;
	}
	@Override
	public boolean equals(Object obj) {
		PDSVO other = (PDSVO) obj;
		return other.getFname().equals(this.getFname());
	}
	@Override
	public int compareTo(PDSVO other) {
		if(this.getNo()>other.getNo())	return 1;
		else if(this.getNo()==other.getNo()) return 0;
		else return -1;
	}
	
	
	public int getNo() {
		return no;
	}
	public long getFlen() {
		return flen;
	}
	public String getFname() {
		return fname;
	}
	public String getAuthor() {
		return author;
	}
	public String getDesc() {
		return desc;
	}
	public byte[] getFdata() {
		return fdata;
	}
	public List<PDSVO> getpList() {
		return pList;
	}
	public PDSVO getPv() {
		return pv;
	}
	public void setNo(int no) {
		this.no = no;
	}
	public void setFlen(long flen) {
		this.flen = flen;
	}
	public void setFname(String fname) {
		this.fname = fname;
	}
	public void setAuthor(String author) {
		this.author = author;
	}
	public void setDesc(String desc) {
		this.desc = desc;
	}
	public void setFdata(byte[] fdata) {
		this.fdata = fdata;
	}
	public void setpList(List<PDSVO> pList) {
		this.pList = pList;
	}
	public void setPv(PDSVO pv) {
		this.pv = pv;
	}
}
