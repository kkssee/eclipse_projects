package com.test.sku.inheritance;

import java.util.ArrayList;
import java.util.List;

public class InheritanceMain {

	public static void main(String[] args) {
		// Inheritance, implements
		// MyClass extends Thread { }
		// MyClass implements Runnable { }
		/* 쉽게 하위 클래스를 파생하여 사용할 수 있다
		 * 클래스 간의 관계(Parent/Child)를 설정할 수 있다
		 * Is-A Relationship (A is a B)
		 * A extends B ( A는 B이다(o), B는 A이다(x))
		 * OOP 3대 특징(Inheritance, Polymorphism, Encapsulation
		 */
		
		//inheritanceTest01();
		//inheritanceTest02();
		//inheritanceTest03();
		//inheritanceTest04();
		
		// Inheritance, Polymorphism, Encapsulation
		// Polymorphism: Override, Overload
		// Encapsulation: private, public, protected
		
		/* Pet Store
		 * cat, dog, snake, hamster : Pet
		 * Cat(int price, String species, float age, String pattern)
		 * Dog(int price, String species, float age, float weight)
		 * Snake(int price, String species, float size, String pattern)
		 * Hamster(int price, String species, float size)
		 */
		pets();
	}

	private static void inheritanceTest01() {
		Item item = new Item();
		item.setName("Momory");
		item.setMade("한국 Digital");
		item.setpDate("2024-07-12");
		item.setPrice(52000);
		
		System.out.println(item);
	}
	private static void inheritanceTest02() {
		Mouse mouse = new Mouse("HighTech LightMouse", "HighTech", 15000, "2021-07-07", "Wireless");
		
		System.out.println(mouse);
	}
	private static void inheritanceTest03() {
		Monitor monitor = new Monitor("Big Screen Monitor", "MakeItBig", 167000, "2020-10-14", 16.7F);
		System.out.println(monitor);
	}
	private static void inheritanceTest04() {
		// 이용자가 마우스, 모니터 한꺼번에 구입한 경우
		List<Item> cart = new ArrayList<>();
		Mouse mouse = new Mouse("HighTech LightMouse", "HighTech", 15000, "2021-07-07", "Wireless");
		Monitor monitor = new Monitor("Big Screen Monitor", "MakeItBig", 167000, "2020-10-14", 16.7F);

		cart.add(mouse);
		cart.add(monitor);
		
		System.out.println("This is your cart !");
		System.out.println("--------------------------------------------------------");
		
		for(int i = 0; i < cart.size(); i++) {
			System.out.println(cart.get(i));
		}
	}
	
	private static void pets() {
		List<Pet> cart = new ArrayList<>();
		Cat cat1 = new Cat(170000, "Persian", 1f, "stripped");
		Cat cat2 = new Cat(520000, "Sphynx", 8f, "Hairless");
		Cat cat3 = new Cat(430000, "Maine Coon", 3f, "Plain");
		Dog dog1 = new Dog(50000, "Shepherd", 7f, 28.6F);
		Snake snake1 = new Snake(1100000, "Anaconda", 50.5F, "Spotted");
		Hamster hamster1 = new Hamster(15000, "Golden Hamster", 2.2F);
		
		cart.add(cat1);
		cart.add(cat2);
		cart.add(dog1);
		cart.add(snake1);
		cart.add(hamster1);
		
		System.out.println("This is your pets !");
		System.out.println("--------------------------------------------------------");
		
		for(int i = 0; i < cart.size(); i++) {
			System.out.println(cart.get(i));
		}
		
	}
	
	
}
