package com.test.sku.serialization;

import java.io.*;
import java.net.*;
import java.util.*;

public class UserWorkThread extends Thread {
	Socket s;
	ObjectInputStream ois;
	ObjectOutputStream oos;
	
	public UserWorkThread() { }
	public UserWorkThread(Socket s) { 
		this.s = s;
		try {
			ois = new ObjectInputStream(s.getInputStream());
			oos = new ObjectOutputStream(s.getOutputStream());
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	@Override
	public void run() {
		try {
			while(true) {
				FileVO fv = new FileVO("업로드(a) 목록(s) 검색(f)\n"
						+ "수정(u) 삭제(d) 종료(x)");
				oos.writeObject(fv);
				oos.flush();
				
				fv = (FileVO)ois.readObject();
				System.out.println("메뉴선택읽음");

				if(fv.upload) {
					byte[] fdata = FileIO.upload(fv.fname);
					fv = new FileVO(fv.fname, fdata);
				}
				else if(fv.list) {
					
				}
				else if(fv.find) {
					
				}
				else if(fv.update) {
					
				}
				else if(fv.delete) {
					
				}
				else if(fv.exit) {
					System.out.println("클라이언트 연결 종료");
				} 
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	
	
}
