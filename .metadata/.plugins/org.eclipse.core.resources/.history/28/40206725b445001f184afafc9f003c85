package com.test.sku.superpet;

import java.util.Scanner;

public class FileIO {
	static Scanner kbd = new Scanner(System.in);
	static String fpath = "C:/test/data/superPets.txt";
	
	public static boolean addPet(String m, String petInfo) {
		String[] str = petInfo.split("//s+");
		switch (m) {
			case "c": {
				Cat c = new Cat(Integer.parseInt(str[0]), str[1], Float.parseFloat(str[2]), str[3]);
				break;
			} case "d": {
				Dog d = new Dog(Integer.parseInt(str[0]), str[1], Float.parseFloat(str[2]), Float.parseFloat(str[3]));
				break;
			} case "s": {
				Snake s = new Snake(Integer.parseInt(str[0]), str[1], Float.parseFloat(str[2]), str[3]);
				break;
			} case "h":  {
				Hamster h = new Hamster(Integer.parseInt(str[0]), str[1], Float.parseFloat(str[2]));
				break;
			}
		}
		//List<Pet> list = getList();
		//list.add(pet);
		
		
		return false;
	}


}
