package com.test.sku.pds;

import java.io.Serializable;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.List;

public class PDSVO implements Serializable, Comparable<PDSVO> {
	int no;
	long flen;
	String fname;
	String author;
	String desc;
	Date date;
	byte[] fdata;
	
	List<PDSVO> pList;
	PDSVO pv;
	
	public PDSVO() { }
	public PDSVO(int no) {
		super();
		this.no = no;
	}
	
	public PDSVO(int nextFno, String fname, String author, long flen, Date date, String desc) {
		super();
		this.no = nextFno;
		this.fname = fname;
		this.author = author;
		this.date = date;
		this.desc = desc;
		this.flen = flen;
	}
	
	
	@Override
	public String toString() {
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		String sdate = sdf.format(date);
		String s = String.format("%d\t%-15s\t%s\t%d\t%s\t%s", no, fname, author, flen, sdate, desc);	
		return s;
	}
}
